<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" >
  <time type="FastUTC" />
  <targets>
    <target name="file" xsi:type="File"
              fileName="${basedir}/Logs/${shortdate}.log"
              layout="[${longdate}] [${uppercase:${level}}] [${logger}] ${message} ${exception:format=tostring}"
              concurrentWrites="false" keepFileOpen="false"/>
    <target name="console" xsi:type="ColoredConsole"
            layout="[${longdate}] [${uppercase:${level}}] [${logger:shortName=true}] ${message} ${exception:format=tostring}" />

    <!--<target name="sendMail" xsi:type="Mail" messagelimit="5" interval="24:00:00"
     smtpServer=""
     smtpPort="2525"
     smtpUsername="server21138"
     smtpPassword="b9W8Bxm4N3Zej5R6Ftw"
     smtpAuthentication="Basic"
     enableSsl="false"
     from="info@easyrewardz.com"
     to="ashutosh@easyrewardz.com"
     subject="Chatbot Lpaas Wrapper: Error Log For Chatbot Lpaas Wrapper - ${shortdate}"
     body="${message}"
    />-->
  </targets>
  <rules>
    <!--<logger name="*" minlevel="error" writeTo="sendMail" />-->
    <logger name="*" writeTo="console,file" />
    <logger name="*" writeTo="console" />
  </rules>
</nlog>